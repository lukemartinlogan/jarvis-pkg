#!/usr/bin/env python3

"""
USAGE:

jpkg install pkg_name@version variant=a variant=b --with-variant ^ dep_name variant@version = a ^ dep_name ...
jpkg install [--force-scrath, --prefer-scratch, --prefer-sys, --force-sys]
"""

from jarvis_cd.jarvis_manager import JarvisManager
import argparse
from enum import Enum
import sys

class JarvisPkgOp(Enum):
    INSTALL = "install"
    UNINSTALL = "uninstall"
    LOAD = "load"
    LIST = "list"
    FIND = "find"
    REPO = "repo"

if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='jpkg')
    parser.add_argument('op', metavar='operation', type=JarvisPkgOp, choices=list(JarvisPkgOp), help="The jarvis-pkg operation")
    parser.add_argument('remaining', nargs=argparse.REMAINDER)
    parser.parse_args(sys.argv)
