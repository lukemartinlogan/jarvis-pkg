#!/usr/bin/env python3

from jarvis_pkg.util.import_all import *
import pathlib, os

jpkg_root = pathlib.Path(__file__).parent.parent.resolve()
path = os.path.join(jpkg_root, 'jarvis_pkg')
root_path = os.path.dirname(path)
imports = import_all(root_path, path)
with open(os.path.join(path, '__init__.py'), 'w') as fp:
    fp.write(imports)
