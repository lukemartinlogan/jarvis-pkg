#!/usr/bin/env python3

"""
USAGE:

jpkg install pkg_name@version variant=a variant=b +variant -variant ^ dep_name variant@version = a ^ dep_name ...
"""

from jarvis_pkg.basic.jpkg_manager import JpkgManager
from jarvis_pkg.basic.jpkg_manifest_manager import JpkgManifestManager
from jarvis_pkg.basic.jpkg_manifest_manager import JpkgManifestManagerArgs
import argparse
from enum import Enum
import sys


class JarvisPkgOp(Enum):
    REGISTER = "register"
    INSTALL = "install"
    UNINSTALL = "uninstall"
    UPDATE = "update"
    LOAD = "load"
    LIST = "list"
    FIND = "find"
    REPO = "repo"


class JpkgParseArgs:
    def __init__(self, args):
        op = args[0]
        if op == JarvisPkgOp.INSTALL:
            pass
        elif op == JarvisPkgOp.UPDATE:
            pass
        elif op == JarvisPkgOp.UNINSTALL:
            pass
        elif op == JarvisPkgOp.LOAD:
            pass
        elif op == JarvisPkgOp.LIST:
            pass
        elif op == JarvisPkgOp.FIND:
            pass
        elif op == JarvisPkgOp.REPO:
            pass


if __name__ == '__main__':
    args = JpkgParseArgs(sys.argv)

